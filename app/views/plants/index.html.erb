<div class="container image-back">
  <div class="container centerDiv">
    <h4 class="garden-search">What do you want to grow?</h4><br>
    <div class="search-bar">
      <%= form_tag(plants_path, method: "post") do %>
        <%= text_field_tag(:search) %>
      <% end %>
      <a id='search-results' class="text-align-center"></a>
    </div>
    <h4 class="garden-search">What do you want to eat?</h4><br>
    <div class="search-bar">
      <%= form_tag(recipes_path, method: "get") do %>
        <%= text_field_tag(:recipe_search) %>
      <% end %>
      <!-- <a id='search-results' class="text-align-center"></a> -->
    </div>
  </div>
</div>
